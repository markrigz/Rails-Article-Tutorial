<h1>Listing articles</h1>
<%= link_to 'New article', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Date</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.user.username %></td>
      <td><%= article.created_at %></td>
      <td><%= link_to 'Show', article_path(article) %></td>

    </tr>
  <% end %>
</table>
